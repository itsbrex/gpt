@import url("$lib/styles/highlight.postcss");

@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
	/** https://uico.robino.dev */
	:root {
		--background: 99% 0 0; /* neutral-50 */
		--foreground: 37% 0 0; /* neutral-700 */
		--muted: 97% 0 0; /* neutral-100 */
		--muted-foreground: 44% 0 0; /* neutral-600 */
		--primary: 28% 0 0; /* neutral-800 */
		--primary-foreground: 97% 0 0; /* neutral-100 */
		--secondary: 93% 0 0; /* neutral-200 */
		--secondary-foreground: 22% 0 0; /* neutral-900 */
		--destructive: 56% 0.19 17; /* rose-700 */
		--destructive-foreground: 97% 0 0; /* neutral-100 */
		--accent: 28% 0 0; /* neutral-800 */
		--accent-foreground: 93% 0 0; /* neutral-200 */
		--card: 100% 0 0; /* white */
		--card-foreground: 37% 0 0; /* neutral-700 */
		--border: 87% 0 0; /* neutral-300 */
		--radius: 0.3rem;
	}
	.dark {
		--background: 15% 0 0; /* neutral-950 */
		--foreground: 87% 0 0; /* neutral-300 */
		--muted: 22% 0 0; /* neutral-900 */
		--muted-foreground: 72% 0 0; /* neutral-400 */
		--primary: 97% 0 0; /* neutral-100 */
		--primary-foreground: 22% 0 0; /* neutral-900 */
		--secondary: 28% 0 0; /* neutral-800 */
		--secondary-foreground: 97% 0 0; /* neutral-100 */
		--destructive: 46% 0.17 17; /* rose-800 */
		--destructive-foreground: 97% 0 0; /* neutral-100 */
		--accent: 72% 0 0; /* neutral-400 */
		--accent-foreground: 28% 0 0; /* neutral-800 */
		--card: 0% 0 0; /* black */
		--card-foreground: 87% 0 0; /* neutral-300 */
		--border: 37% 0 0; /* neutral-700 */
	}
}

@layer utilities {
	.text-balance {
		text-wrap: balance;
	}
}
