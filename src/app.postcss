@import url("$lib/styles/highlight.postcss");

@tailwind base;
@tailwind components;
@tailwind utilities;

/** uses the TailwindCSS Typography plugin for base styles */
@layer base {
	a,
	button,
	input,
	textarea,
	summary {
		@apply outline-offset-4;
	}
}

@layer components {
	.btn {
		@apply rounded bg-gray-800 px-3 py-2 text-sm capitalize leading-4 tracking-wide text-gray-50 shadow transition hover:bg-gray-900 active:scale-95 active:shadow-none disabled:cursor-not-allowed disabled:bg-gray-400 disabled:text-gray-50 disabled:shadow disabled:hover:bg-gray-400;
	}
	.btn-s {
		@apply bg-gray-50 bg-opacity-0 text-inherit shadow-none hover:bg-opacity-10;
	}
	.btn-d {
		@apply bg-rose-800 hover:bg-rose-900;
	}
	.input {
		@apply rounded bg-transparent p-2 text-sm leading-4 disabled:cursor-not-allowed disabled:opacity-50;
	}
	.label {
		@apply text-sm font-semibold;
	}
}

@layer utilities {
	.text-balance {
		text-wrap: balance;
	}
}
