@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
	* {
		@apply appearance-none transition;
	}
	input,
	select,
	textarea {
		@apply focus:outline-none;
	}
	button,
	a {
		@apply focus:outline-none focus:outline-blue-600;
	}
	html {
		@apply scroll-smooth selection:bg-yellow-300 selection:text-gray-950;
	}
	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		@apply font-bold;
	}
	h1 {
		@apply text-3xl;
	}
	h2 {
		@apply text-2xl;
	}
	h3 {
		@apply text-xl;
	}
	h4 {
		@apply text-lg;
	}
	h5 {
		@apply text-base;
	}
	h6 {
		@apply text-sm;
	}
	a {
		@apply font-semibold underline;
	}
	p,
	ul,
	ol {
		@apply my-2 first:mt-0 last:mb-0;
	}
	pre {
		@apply my-4 w-full overflow-x-auto rounded-lg bg-gray-700 p-3 text-sm text-gray-50;
	}
	code {
		@apply rounded-sm bg-gray-700 p-1 text-sm text-gray-50;
	}
	pre > code {
		@apply w-fit p-0;
	}
	ol {
		@apply list-decimal pl-6;
	}
	ul {
		@apply list-disc pl-6;
	}
	button {
		@apply rounded-3xl bg-blue-600 text-gray-50 shadow transition hover:brightness-90 active:scale-[98%]  disabled:cursor-wait disabled:bg-blue-300;
	}
	.message > * {
		@apply inline-block;
	}
}
